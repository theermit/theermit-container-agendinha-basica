{% extends 'template.njk' %}
{% block title %}Cadastro de usuário{% endblock %}
{% block content %}
{% if email_ja_esta_cadastrado == true %}
    {% set classe_erro_email = "has-error" %}
{% endif %}
<h1 class="text-center">Cadastro de usuário</h1>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        {% if senhas_nao_conferem == true %}
            <div class="alert alert-danger" role="alert">As senhas não conferem.</div>
        {% endif %}
        <form method="post" action="/efetuar_cadastro">
            <div class="form-group {{ classe_erro_email }}">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" id="email" value="{{ email }}" required>
                {% if email_ja_esta_cadastrado == true %}
                    <span  class="help-block">Esse email já está em uso.</span>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" class="form-control" name="nome" id="nome" value="{{ nome }}"   required>
            </div>
            <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" class="form-control"  name="senha" id="senha"  required>
            </div>
            <div class="form-group">
                <label for="confirmacao_senha">Confirmação da Senha</label>
                <input type="password" class="form-control"  name="confirmacao_senha" id="confirmacao_senha"  required>
            </div>
            <p  class="text-center">
                <button  class="btn btn-danger" type="reset">Limpar</button>
                <button  class="btn btn-primary"  type="submit">Logar</button>
            </p>
        </form>
    </div>
</div>
{% endblock %}