{% extends 'template.njk' %}
{% block title %}logar{% endblock %}
{% block content %}
<h1 class="text-center">Login</h1>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        {% if falha_login == true %}
            <div class="alert alert-danger" role="alert">Email ou senha inválidos</div>
        {% endif %}
        <form method="post" action="/efetuar_login">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" id="email" value="{{ email }}"  required>
            </div>
            <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" class="form-control"  name="senha" id="senha"  required>
            </div>
            <p class="text-center"><a href="/cadastrar">Não tem cadastro? então cadastre-se!</a></p>
            <p  class="text-center">
                <button  class="btn btn-danger" type="reset">Limpar</button>
                <button  class="btn btn-primary"  type="submit">Logar</button>
            </p>
        </form>
    </div>
</div>
{% endblock %}
