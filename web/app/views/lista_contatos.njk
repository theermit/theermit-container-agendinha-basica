{% extends 'template.njk' %}
{% block title %} Lista de contatos {% endblock %}
{% block content %}
<h1 class="text-center">Lista de contatos</h1>
<p class="text-center"><a href="/novo" class="btn btn-primary">Incluir contato</a></p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>nome</th>
            <th>telefone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% if contatos|length > 0 %}
            {% for contato in contatos %}
                <tr>
                    <td>{{ contato.nome }}</td>
                    <td>{{ contato.telefone }}</td>
                    <td><a href="/editar/{{ contato.id }}" class="btn btn-primary">Editar</a> <a href="/apagar/{{ contato.id }}" class="btn btn-danger">Apagar</a></td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan='3'>não há contatos</td>
            </tr>
        {% endif %}
    </tbody>
</table>
{% endblock %}